{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".",
    "rootDir": "../..",
    "baseUrl": "../..",
    "paths": {
      "@/*": ["./*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "agent-runner.ts",
    "../../lib/mongodb.ts",
    "../../lib/logger.ts",
    "../../lib/env.ts",
    "../../backend/models/**/*"
  ]
}
